    <model name = "artemis_arena">
      <static>true</static>
      <link name = "link">
        <visual name = "visual">
          <geometry>
            <mesh>
              <uri>./meshes/artemis-arena.dae</uri>
              <scale>1 1 1</scale>
            </mesh>
          </geometry>
        </visual>
        <collision name = "collision">
          <geometry>
              <mesh>
                <uri>./meshes/artemis-arena-collision.stl</uri>
                <scale>1 1 1</scale>
              </mesh>
            </geometry>
        </collision>
      </link>
    </model>

